<% include partials/header %>
<% include partials/navigation %>

    <div class="col-md-12">
        <h1><%= title %></h1><br>
       
        <div>
            <form action="" method="POST">
                <select id="viewUnits" name="viewUnits" onchange="handlers.assingUnitToClass()">
                    <option value="null">select unit to proceed</option>
                    <% data.forEach(function(unit){ %>
                        <option value = <%= unit.code %>> <%= unit.code %> </option>
                    <% }) %>    
                </select>
                <p></p>
                <p><input type="text" name="lecturer" placeholder="lecturer's name"></p>
                <p><input type="text" name="student" placeholder="student"></p>
                <p><input type="text" name="time" placeholder="time of lecture"></p>

                <button onclick="handlers.startClass()" type="submit" class="btn btn-lg btn-outline-secondary">
                    Start-Class
                </button>
                <button onclick="handlers.endClass()" type="button" class="btn btn-lg btn-outline-secondary">
                    End-Class
                </button>
            </form>

        </div>

        <form role="form">       
            <div class="form-group">       
                <label for="numberOfStudents">
                    No. of Students
                </label>
                <input type="text" class="form-control" id="exampleInputPassword1" />
            </div>
        </form>
    
    </div>
    
<% include partials/footer %>